doctype html
html(
  dir="ltr"
  lang="en-US"
)
  head
    meta(charset="utf-8")
    meta(
      http-equiv="X-UA-Compatible"
      content="IE=edge"
    )
    meta(
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    )
    title= siteTitle
    meta(
      name=siteDescription
      content="Module Demo"
    )
    link(
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.2.0/normalize.min.css"
    )
    link(
      rel="stylesheet"
      href="dist/" + siteTitle + ".css"
    )
  body
    block content
    script(src="//cdn.jsdelivr.net/pouchdb/6.1.0/pouchdb.min.js")
    script(
      type="text/javascript"
      src="dist/" + siteTitle + ".js"
    )
    script(
      type="text/javascript"
      src="src/init.js"
    )
